datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int          @id @default(autoincrement())
  username        String       @unique
  name            String
  password        String
  profilePicture  String
  gender          Gender
  transactions    Transaction[]
  tags            UserTag[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

model Transaction {
  id          Int          @id @default(autoincrement())
  description String
  paymentType PaymentType
  category    String
  amount      Float
  location    String
  date        String
  userId      Int
  user        User         @relation(fields: [userId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users UserTag[]
}

model UserTag {
  userId Int
  tagId  Int
  user   User @relation(fields: [userId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])

  @@id([userId, tagId])
}

model CustomTag {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  searchTerm String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum PaymentType {
  cash
  debit
  credit
  twint
}

enum Gender {
  male
  female
  diverse
}
